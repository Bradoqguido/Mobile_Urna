<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jefer.urnatesi.MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">

            <Space
                android:layout_width="match_parent"
                android:layout_height="23dp"
                android:layout_weight="0.60" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="233dp"
                android:layout_height="139dp"
                android:layout_weight="0.60"
                app:srcCompat="@mipmap/ic_launcher" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="23dp"
                android:layout_weight="0.60" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Digite o CÃ³digo do livro"
                android:textAlignment="center"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/itembusca"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ems="10"
                android:gravity="center"
                android:inputType="number" />

            <Button
                android:id="@+id/buscar"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="#9e9e9e"
                android:text="Buscar" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">

            <ListView
                android:id="@+id/lista"
                android:layout_width="match_parent"
                android:layout_height="212dp"
                android:layout_weight="0.92" />

            <LinearLayout
                android:id="@+id/layoutbotoes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/branco"
                    android:layout_width="wrap_content"
                    android:layout_height="59dp"
                    android:layout_weight="1.00"
                    android:background="#ffffff"
                    android:text="Branco" />

                <Button
                    android:id="@+id/corrige"
                    android:layout_width="wrap_content"
                    android:layout_height="59dp"
                    android:layout_weight="1.00"
                    android:background="#ff0015"
                    android:text="Corrige" />

                <Button
                    android:id="@+id/confirma"
                    android:layout_width="wrap_content"
                    android:layout_height="59dp"
                    android:layout_weight="1.01"
                    android:background="#26ff00"
                    android:text="Confirma" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
